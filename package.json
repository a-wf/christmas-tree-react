{
  "name": "christmas-tree-react",
  "homepage": "https://a-wf.github.io/christmas-tree-react",
  "version": "1.0.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "electron": "electron .",
    "predist:mac": "mkdir -p release && cp 使用说明.txt release/",
    "dist:mac": "npm run build && electron-builder --mac",
    "predist:win": "mkdir -p release && cp 使用说明.txt release/",
    "dist:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.wyr.christmastree",
    "productName": "圣诞树",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "build/icon.png",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "圣诞树应用需要使用摄像头来识别手势控制，让你可以通过手势与3D圣诞树互动。",
        "NSMicrophoneUsageDescription": "圣诞树应用需要访问麦克风权限以播放背景音乐。"
      }
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@mediapipe/tasks-vision": "^0.10.22-rc.20250304",
    "@react-three/drei": "^9.92.0",
    "@react-three/fiber": "^8.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "gh-pages": "^6.3.0",
    "vite": "^5.0.0"
  }
}
